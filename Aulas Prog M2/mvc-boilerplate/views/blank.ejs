<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        overflow: hidden;
    }
    .sky {
        background: linear-gradient(to bottom, #87ceeb 0%, #b3e0ff 100%);
        height: 60vh;
        width: 100vw;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
    }
    .ground {
        background: #7cfc00;
        height: 40vh;
        width: 100vw;
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 2;
    }
    .barn {
        position: absolute;
        left: 50%;
        bottom: 10vh;
        transform: translateX(-50%);
        width: 200px;
        height: 140px;
        z-index: 3;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .barn-body {
        width: 140px;
        height: 100px;
        background: #b22222;
        border: 4px solid #fff;
        border-radius: 0 0 10px 10px;
        position: relative;
        z-index: 1;
    }
    .barn-roof {
        width: 160px;
        height: 50px;
        background: #8b0000;
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        position: absolute;
        top: -40px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
    }
    .barn-door {
        width: 40px;
        height: 60px;
        background: #fff8dc;
        border: 2px solid #8b4513;
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 3;
    }
</style>
<div class="sky"></div>
<div class="ground"></div>
<div class="barn">
    <div class="barn-body">
        <div class="barn-door"></div>
    </div>
    <div class="barn-roof"></div>
</div>