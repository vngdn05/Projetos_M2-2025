<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Aulas</title>
    <link rel="stylesheet" href="/css/aulas.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <!-- SVG igual ao de trabalhos -->
                    <svg width="40" height="40" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="25" y="20" width="50" height="60" rx="5" fill="white" stroke="#333" stroke-width="2"/>
                        <rect x="15" y="15" width="10" height="15" rx="5" fill="#2196F3"/>
                        <line x1="35" y1="35" x2="55" y2="35" stroke="#333" stroke-width="2"/>
                        <line x1="35" y1="45" x2="65" y2="45" stroke="#333" stroke-width="2"/>
                        <line x1="35" y1="55" x2="60" y2="55" stroke="#333" stroke-width="2"/>
                        <rect x="30" y="32" width="4" height="4" fill="#4CAF50"/>
                        <rect x="30" y="42" width="4" height="4" fill="#4CAF50"/>
                        <rect x="30" y="52" width="4" height="4" fill="#4CAF50"/>
                    </svg>
                </div>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="/trabalhos" class="nav-item">Trabalhos</a></li>
                    <li><a href="/projetos" class="nav-item">Projetos</a></li>
                    <li><a href="/pesquisas" class="nav-item">Pesquisas</a></li>
                    <li><a href="/aulas" class="nav-item active">Aulas</a></li>
                </ul>
            </nav>
        </aside>
        <main class="main-content">
            <header class="main-header">
                <h1>Olá, se Organize!</h1>
            </header>
            <section class="content-section">
                <div class="section-header">
                    <h2>Aulas <span class="expand-icon">^</span></h2>
                </div>
                <div class="trabalhos-grid">
                    <% if (aulas && aulas.length > 0) { %>
                        <% aulas.forEach(function(aula) { %>
                            <div class="trabalho-card">
                                <div class="trabalho-icon">
                                    <div class="icon-circle"></div>
                                </div>
                                <div class="trabalho-info">
                                    <h3><%= aula.disciplina %></h3>
                                    <p><%= aula.descricao %></p>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                    <div class="trabalho-card add-trabalho">
                        <button class="add-btn" id="openAddModalAula" title="Adicionar aula">
                            <span class="plus-icon">+</span>
                        </button>
                    </div>
                </div>
                <!-- Modal para adicionar aula -->
                <div id="addModalAula" class="modal" style="display:none;">
                    <div class="modal-content">
                        <span class="close" id="closeAddModalAula">&times;</span>
                        <h2>Nova Aula</h2>
                        <form id="addAulaForm">
                            <label for="disciplina">Disciplina:</label>
                            <input type="text" id="disciplina" name="disciplina" required>
                            <label for="descricao">Descrição:</label>
                            <input type="text" id="descricao" name="descricao">
                            <button type="submit">Adicionar</button>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
        document.getElementById('openAddModalAula').onclick = function() {
            document.getElementById('addModalAula').style.display = 'block';
        };
        document.getElementById('closeAddModalAula').onclick = function() {
            document.getElementById('addModalAula').style.display = 'none';
        };
        window.onclick = function(event) {
            if (event.target == document.getElementById('addModalAula')) {
                document.getElementById('addModalAula').style.display = 'none';
            }
        };
        document.getElementById('addAulaForm').onsubmit = async function(e) {
            e.preventDefault();
            const data = {
                professor_id: 1, // valor fixo, ajuste conforme necessário
                disciplina: this.disciplina.value,
                descricao: this.descricao.value || '',
                data_aula: new Date().toISOString().split('T')[0]
            };
            const resp = await fetch('/aulas', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            if (resp.ok) {
                window.location.reload();
            } else {
                alert('Erro ao adicionar aula');
            }
        };
    </script>
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0; top: 0; width: 100%; height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }
        .modal-content {
            background: #fff;
            margin: 10% auto;
            padding: 30px 20px;
            border-radius: 10px;
            width: 350px;
            position: relative;
        }
        .modal-content label {
            display: block;
            margin-top: 10px;
        }
        .modal-content input {
            width: 100%;
            padding: 6px;
            margin-top: 4px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .modal-content button[type="submit"] {
            margin-top: 18px;
            width: 100%;
            padding: 10px;
            background: #4caf50;
            color: #fff;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
        }
        .close {
            position: absolute;
            right: 15px;
            top: 10px;
            font-size: 1.5em;
            cursor: pointer;
        }
    </style>
</body>
</html>
